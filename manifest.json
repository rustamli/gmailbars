{
  "name": "GmailBars",
  "version": "1.2",
  "description": "Run Handlebars templates in Gmail",
  "permissions": ["contextMenus", "tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["https://*.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "jquery-1.10.2.min.js",
    "handlebars.min.js",
    "add-log.js"
  ],
  "background": {
    "scripts": ["bg.js"]
  },
  "options_page": "options.html",
  "manifest_version": 2,
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}